@model TravelGuideMvc.ViewModels.NearbyCardVm
@using System.Globalization

@{
    string MapsSearchUrl(double lat, double lng)
    {
        var la = lat.ToString(CultureInfo.InvariantCulture);
        var lo = lng.ToString(CultureInfo.InvariantCulture);
        return $"https://www.google.com/maps/search/?api=1&query={la},{lo}";
    }

    string DirectionsUrl(double lat, double lng)
    {
        var la = lat.ToString(CultureInfo.InvariantCulture);
        var lo = lng.ToString(CultureInfo.InvariantCulture);
        return $"https://www.google.com/maps/dir/?api=1&destination={la},{lo}";
    }
}

<div class="col-md-6 col-lg-6">
    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 d-flex align-items-center gap-3">
            <div class="fs-1">@Model.Icon</div>
            <h5 class="fw-bold m-0 text-dark">@Model.Title</h5>
        </div>
        <div class="card-body px-0 pb-2">
            @if (Model.Items == null || !Model.Items.Any())
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-search fs-3 d-block mb-2 opacity-50"></i>
                    No nearby places found.
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var sp in Model.Items.Take(5)) // Limit to 5 items to avoid long lists
                    {
                        var spMaps = MapsSearchUrl(sp.Latitude, sp.Longitude);
                        var spDir = DirectionsUrl(sp.Latitude, sp.Longitude);

                        <div class="list-group-item border-0 px-4 py-3 hover-bg-light transition-base">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <div>
                                    <div class="fw-bold text-dark">@sp.Name</div>
                                    <span class="badge bg-light text-secondary border fw-normal mt-1">@sp.Type</span>
                                </div>
                                @if (Model.ShowPhone && !string.IsNullOrWhiteSpace(sp.Phone))
                                {
                                    <a href="tel:@sp.Phone" class="btn btn-sm btn-light rounded-circle shadow-sm" title="Call">
                                        <i class="bi bi-telephone-fill text-success"></i>
                                    </a>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(sp.Address))
                            {
                                <div class="small text-muted mb-2 text-truncate"><i class="bi bi-geo-alt me-1"></i>@sp.Address</div>
                            }

                            <div class="d-flex gap-2">
                                <a href="@spMaps" target="_blank" class="btn btn-link btn-sm p-0 text-decoration-none small fw-bold">
                                    Map
                                </a>
                                <span class="text-muted small">•</span>
                                <a href="@spDir" target="_blank" class="btn btn-link btn-sm p-0 text-decoration-none small fw-bold">
                                    Directions
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
